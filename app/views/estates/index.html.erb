<p id="notice"><%= notice %></p>

<h3>Nieruchomości </h3>

<table>
  <thead>
    <tr>
    <th># Ogłoszenia</th>
    <th>Zdjęcie</th>
      <th>Nazwa</th>
      <th>Cena</th>
      
      <th>Lokalizacja</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estates.each do |estate| %>
      <tr>
      <td><%= estate.id %></td>
        <td><%= link_to(image_tag(estate.image_url, :width=>"200", :height=>"200"), estate) %> </td>

        <td><%= estate.title %></td>
        <td><%= estate.price %></td>
                    
        <td><%= estate.address %></td>

        <td><%= link_to 'Pokaż', estate, :class=> "btn btn-success btn-small" %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edytuj', edit_estate_path(estate), :class=> "btn btn-small" %></td>
        <td><%= link_to 'Usuń', estate, method: :delete, data: { confirm: 'Na pewno?' }, :class=> "btn btn-small" %></td>
        
         <% end %>
      </tr>
      <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Dodaj Nieruchomość', new_estate_path %>